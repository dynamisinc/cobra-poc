# Production Environment Configuration
# Used when deploying to Azure App Service

# API URL - Empty string because service files already include /api/ prefix
# DO NOT set to /api - this causes double prefix (/api/api/...) errors!
# Service files use: apiClient.get('/api/events') which gets appended to this base URL
VITE_API_URL=

# SignalR Hub URL - Use relative path
VITE_HUB_URL=/hubs/checklist

# Enable mock authentication (no real auth for POC)
VITE_ENABLE_MOCK_AUTH=true
